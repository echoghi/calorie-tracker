{
    "compilerOptions": {
        "outDir": "./build",
        "noImplicitAny": true,
        "lib": ["es5", "es6", "es7", "es2017", "dom"],
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "./src/",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false
    },
    "exclude": ["node_modules", "build", "webpack.config.js"]
}
