{
    "presets": [
        "@babel/react",
        [
            "@babel/typescript",
            {
                "isTSX": true,
                "allExtensions": true
            }
        ],
        [
            "@babel/env",
            {
                "loose": true,
                "modules": false
            }
        ]
    ],
    "plugins": ["@babel/plugin-proposal-class-properties", "@babel/plugin-syntax-dynamic-import"],
    "env": {
        "test": {
            "plugins": [
                "transform-es2015-modules-commonjs",
                "babel-plugin-transform-dynamic-import"
            ],
            "presets": [["@babel/env"], "@babel/react"]
        }
    }
}
